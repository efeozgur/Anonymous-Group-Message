@model IEnumerable<Agm.Models.Class.usersModel>

@{
    ViewBag.Title = "groupInfo";
    Layout = "~/Views/Shared/_UserIndex.cshtml";
}

<div class="cardCapsule mt-5">
    <div class="row w-100">
        
        <div class="col-md-3">
            <div class="card border-info mx-sm-1 p-3">
                <div class="card border-info shadow text-info p-3 my-card"><span class="fas fa-code" aria-hidden="true"></span></div>
                <div class="text-info text-center mt-3"><h4>Grup Kodu</h4></div>
                <div class="text-info text-center mt-3"><h4>@ViewBag.gCode</h4></div>     
                       
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info mx-sm-1 p-3">
                <div class="card border-info shadow text-info p-3 my-card"><span class="fas fa-user-shield" aria-hidden="true"></span></div>
                <div class="text-info text-center mt-3"><h4>Yönetici</h4></div>
                <div class="text-info text-center mt-3"><h4>@ViewBag.gManager</h4></div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info mx-sm-1 p-3">
                <div class="card border-info shadow text-info p-3 my-card"><span class="fas fa-users" aria-hidden="true"></span></div>
                <div class="text-info text-center mt-3"><h4>Üye Sayısı</h4></div>
                <div class="text-info text-center mt-3"><h4>@ViewBag.UsersCount</h4></div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info mx-sm-1 p-3">
                <div class="card border-info shadow text-info p-3 my-card"><span class="fas fa-envelope-open-text" aria-hidden="true"></span></div>
                <div class="text-info text-center mt-3"><h4>Toplam Mesaj</h4></div>
                <div class="text-info text-center mt-3"><h4>@ViewBag.MessageCount</h4></div>
            </div>
        </div>
       
    </div>
</div>

<div class="container mt-5">
    <div class="search-table">
        <div class="search-box capsule" style="background:none !important;">
            <div class="row">
                <div class="input-group md-form form-sm form-2 pl-0">
                    <input class="form-control my-0 py-1 amber-border" type="text" id="myInput" onkeyup="myFunction()" placeholder="Üye Ara" aria-label="Search">
                    <div class="input-group-append">
                        <span class="input-group-text amber lighten-3" id="basic-text1">
                            <i class="fas fa-search text-grey"
                               aria-hidden="true"></i>
                        </span>
                    </div>
                    <script>
                        $(document).ready(function () {
                            $("#myInput").on("keyup", function () {
                                var value = $(this).val().toLowerCase();
                                $("#myTable tr").filter(function () {
                                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                                });
                            });
                        });
                    </script>
                </div>
            </div>
        </div>

        <div class="search-list ">
            <table class="table table-responsive-sm" id="myTable" style="">
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img alt="asd" src="@item.userImageUrl" style="width:50px;height:50px;border:0px solid black;border-radius:50%;" />
                                </td>
                                <td>
                                    <a style="text-decoration:none;" href="@Url.Action("Index","TextMessage", new {id=item.userId})">
                                        <h6 class="h6">@item.userLoginName</h6>
                                    </a>
                                </td>
                                <td>
                                        <center><i class="fas fa-trash-alt" style="color:red;cursor:pointer; margin-top:7px;"></i></center>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>
                                <center>@ViewBag.NoResult</center>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



